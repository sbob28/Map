{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Flight Distance by Bird Species",
  "data": {"url": "bird_migration_data.csv"},
  "mark": {"type": "bar", "cornerRadiusTopLeft": 4, "cornerRadiusTopRight": 4},
  "encoding": {
    "x": {"field": "Species", "type": "nominal", "title": "Bird Species", "sort": "-y"},
    "y": {"aggregate": "mean", "field": "Flight_Distance_km", "type": "quantitative", "title": "Avg Distance (km)"},
    "color": {"field": "Species", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "Species"},
      {"aggregate": "mean", "field": "Flight_Distance_km", "title": "Avg Distance (km)"}
    ]
  }
}
